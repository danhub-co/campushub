generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("student")
  createdAt DateTime @default(now())
  documents Document[]
}

model University {
  id      String    @id @default(uuid())
  name    String
  country String
  programs Program[]
}

model Program {
  id           String   @id @default(uuid())
  university   University @relation(fields: [universityId], references: [id])
  universityId String
  title        String
  level        String
  intakeMonths String
  createdAt    DateTime @default(now())
}

model Document {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  applicationId String?          // optional relation to an application record (if you add Applications later)
  key         String   // S3 object key
  filename    String
  contentType String
  size        Int?     // optional size in bytes (you can update after upload)
  createdAt   DateTime @default(now())
}
